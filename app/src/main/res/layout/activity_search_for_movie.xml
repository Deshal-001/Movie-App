<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"

     android:layout_height="match_parent">


<LinearLayout  android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchForMovieActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_margin="20dp"
        android:id="@+id/search_movie_lbl"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_movie_"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="@string/search" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            app:strokeColor="@color/purple_500"
            app:strokeWidth="4dp"
            android:textColor="@color/white"

            app:icon="@drawable/ic_baseline_search_24"
            app:iconTint="@color/white"
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="80dp"
            android:maxHeight="50dp"
            android:text="@string/search" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/save_button"
            app:strokeColor="@color/purple_500"
            app:icon="@drawable/ic_baseline_save_alt_24"
            app:iconTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxHeight="50dp"
            android:text="@string/save"

            app:strokeWidth="4dp"
            android:textColor="@color/white"
           />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/title_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="10dp"
            android:layout_weight="1"
            android:lines="1"
            android:maxLines="10"
            android:text=""
            android:fontFamily="@font/arbutus_slab"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/movie_year_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:lines="1"
            android:maxLines="10"
            android:text=""
            android:fontFamily="@font/arbutus_slab"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/movie_genre_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:lines="1"
            android:maxLines="10"
            android:text=""
            android:fontFamily="@font/arbutus_slab"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <TextView
            android:layout_margin="10dp"
            android:id="@+id/movie_rate_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="10"
            android:fontFamily="@font/arbutus_slab"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:lines="1"
            android:layout_weight="1"
            android:text="" />


        <TextView
            android:layout_margin="10dp"
            android:id="@+id/movie_released_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arbutus_slab"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:maxLines="10"
            android:lines="1"
            android:layout_weight="1"
            android:text="" />


        <TextView
            android:layout_margin="10dp"
            android:id="@+id/movie_actor_label"
            android:layout_width="match_parent"
            android:fontFamily="@font/arbutus_slab"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:maxLines="10"
            android:lines="1"
            android:layout_weight="1"
            android:text="" />


        <TextView
            android:layout_margin="10dp"
            android:id="@+id/movie_director_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arbutus_slab"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_weight="1"
            android:maxLines="10"
            android:lines="1"
            android:text="" />


        <TextView
            android:layout_margin="10dp"
            android:id="@+id/movie_runtime_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arbutus_slab"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_weight="1"
            android:maxLines="10"
            android:lines="1"
            android:text="" />


        <TextView
            android:layout_margin="10dp"
            android:id="@+id/movie_writer_label"
            android:layout_width="match_parent"
            android:fontFamily="@font/arbutus_slab"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="10"
            android:lines="1"
            android:text="" />

        <TextView
            android:layout_margin="10dp"
            android:maxLines="100"
            android:lines="5"
            android:id="@+id/plot_label"
            android:fontFamily="@font/arbutus_slab"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />




    </LinearLayout>
</LinearLayout>


</ScrollView>